{{#partial "contenido"}}
<div class="section">
    <div class="table-responsive">
        <table class="table table-hover" id="table-registrar-trayectos">
            <thead>
                <tr>
                    <th scope="col" class="hide-column">idUbicacion</th>
                    <th scope="col">Nombre</th>
                    <th scope="col" class="hide-column">idPais</th>
                    <th scope="col">Pais</th>
                    <th scope="col" class="hide-column">idProvincia</th>
                    <th scope="col">Provincia</th>
                    <th scope="col" class="hide-column">idMunicipio</th>
                    <th scope="col">Municipio</th>
                    <th scope="col" class="hide-column">idLocalidad</th>
                    <th scope="col">Localidad</th>
                    <th scope="col">Calle</th>
                    <th scope="col">Altura</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each ubicaciones}}
                <tr>
                    <td id="ubi-idUbicacion-{{@index}}" class="hide-column">{{id_ubicacion}}</td>
                    <td id="ubi-nombre-{{@index}}">{{nombre}}</td>
                    <td id="ubi-idPais-{{@index}}" class="hide-column">{{idPais}}</td>
                    <td id="ubi-pais-{{@index}}">{{paisDet}}</td>
                    <td id="ubi-idProvincia-{{@index}}" class="hide-column">{{idProvincia}}</td>
                    <td id="ubi-provincia-{{@index}}">{{provinciaDet}}</td>
                    <td id="ubi-idMunicipio-{{@index}}" class="hide-column">{{idMunicipio}}</td>
                    <td id="ubi-municipio-{{@index}}">{{municipioDet}}</td>
                    <td id="ubi-idLocalidad-{{@index}}" class="hide-column">{{idLocalidad}}</td>
                    <td id="ubi-localidad-{{@index}}">{{localidadDet}}</td>
                    <td id="ubi-calle-{{@index}}">{{calle}}</td>
                    <td id="ubi-altura-{{@index}}">{{altura}}</td>
                    <td>
                        <button type="button" id="edit-{{@index}}" class="bi bi-pencil btn btn-outline-primary btn-sm edit-ubicacion"></button>
                        <button type="button" id="del-{{@index}}" class="bi bi-trash btn btn-outline-danger btn-sm del-ubicacion"></button>
                    </td>
                </tr>
                {{/each}}
                </tr>
            </tbody>
        </table>
    </div>
    <button id="agregar-ubicacion" type="button" class="btn btn-success">Agregar Ubicacion</button>
</div>
{{/partial}}

{{#partial "modals"}}
<!--MODAL UBICACION-->
<div class="modal fade" id="modalUbicacion" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalUbicacion" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ubicacion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/ubicaciones" method="post" id="frmUbicacion">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input id="nombre" type="text" name="nombre" class="form-control input-texto" placeholder="Casa" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <label for="pais" class="form-label">Pais</label>
                            <select id="pais" name="pais" class="form-select" aria-label="Default select" required>
                                <option selected disabled>Pais</option>
                                {{#each paises}}
                                <option value="{{id}}">{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label for="provincia" class="form-label">Provincia</label>
                            <select id="provincia" name="provincia" class="form-select" aria-label="Default select" required>
                                <option selected>Provincia</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <label for="municipio" class="form-label">Municipio</label>
                            <select id="municipio" name="municipio" class="form-select" aria-label="Default select" required>
                                <option selected>Municipio</option>
                            </select>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label for="localidad" class="form-label">Localidad</label>
                            <select id="localidad" name="localidad" class="form-select" aria-label="Default select" required>
                                <option selected>Localidad</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <label for="calle" class="form-label">Calle</label>
                            <input id="calle" type="text" name="calle" class="form-control input-texto" placeholder="Avenida Medrano" required>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label for="altura" class="form-label">Altura</label>
                            <input id="altura" type="text" name="altura" class="form-control input-texto" placeholder="951" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Atrás</button>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--MODAL UBICACION-->

<!--MODAL ELIMINAR UBICACION-->
<div class="modal fade" id="modalEliminarUbicacion" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalEliminarUbicacion" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Eliminar registro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Esta seguro que desea eliminar la ubicacion de <strong id="nombre-ubicacion">AAA</strong>?
            </div>
            <div class="modal-footer">
                <form id="frmEliminar" action="/ubicaciones/{{empleado}}/eliminar/" method="POST">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Volver</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!--MODAL ELIMINAR UBICACION-->
{{/partial}}
